# 使用Alpine Linux基础镜像
FROM alpine:latest
# 安装必要的软件包
RUN apk update && apk add --no-cache nethogs iftop && \
    # 清理缓存减小镜像体积
    rm -rf /var/cache/apk/*
# 创建执行脚本(若是未指定网卡则默认第一个)
RUN echo '#!/bin/sh' > /start.sh && \
    echo '' >> /start.sh && \
    echo '# 如果未指定网卡，尝试自动检测第一个非lo网卡' >> /start.sh && \
    echo 'if [ -z "$MONITOR_INTERFACE" ]; then' >> /start.sh && \
    echo '    MONITOR_INTERFACE=$(ip link | grep -E '^[0-9]+:' | grep -v lo | cut -d: -f2 | head -1 | tr -d ' ')' >> /start.sh && \
    echo '    echo "自动检测接口: $MONITOR_INTERFACE"' >> /start.sh && \
    echo 'fi' >> /start.sh && \
    echo '' >> /start.sh && \
    echo '# 验证网卡是否存在' >> /start.sh && \
    echo 'if ! ip link show $MONITOR_INTERFACE >> /dev/null 2>>\&1; then' >> /start.sh && \
    echo '    echo "错误：接口 $MONITOR_INTERFACE 未找到!"' >> /start.sh && \
    echo '    echo "可用接口："' >> /start.sh && \
    echo '    ip link show' >> /start.sh && \
    echo '    exit 1' >> /start.sh && \
    echo 'fi' >> /start.sh && \
    echo '' >> /start.sh && \
    echo 'echo "监控接口: $MONITOR_INTERFACE"' >> /start.sh && \
    echo 'echo "运行: docker exec -it $(hostname) nethogs $MONITOR_INTERFACE"' >> /start.sh && \
    echo 'echo "Or: docker exec -it $(hostname) iftop -i $MONITOR_INTERFACE"' >> /start.sh && \
    echo '' >> /start.sh && \
    echo '# 保持容器运行' >> /start.sh && \
    echo 'sleep infinity' >> /start.sh && \
    chmod +x /start.sh
# 设置默认监控的网卡为eth0,可通过环境变量更改
ENV MONITOR_INTERFACE=eth0
# 设置容器启动命令
CMD ["/start.sh"]
